page {
  background: #101010;
  color: #e8e8e8;
  font-family: Arial, sans-serif;
}

.card {
  background: #1d1d1d;
  border: 2rpx solid #333;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: #1d7dfa;
  color: #fff;
}

.btn-warn {
  background: #f3aa00;
  color: #111;
}

.pixel {
  box-shadow: 0 0 0 2rpx #000, 4rpx 4rpx 0 #000;
}
