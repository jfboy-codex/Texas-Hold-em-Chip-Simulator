.page { padding: 20rpx; }
.row { display:flex; gap: 8rpx; align-items: center; }
.nick-input { flex:1; background:#2a2a2a; padding: 12rpx; border-radius: 8rpx; }
.seat-title { margin-bottom: 12rpx; }
.seats { display:grid; grid-template-columns: 1fr 1fr; gap: 12rpx; }
.seat { min-height: 180rpx; border: 2rpx dashed #444; border-radius: 12rpx; display:flex; align-items:center; justify-content:center; }
.seat-user { text-align:center; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 36rpx; }
.seat-empty { width: 90rpx; height: 90rpx; border-radius: 45rpx; font-size: 48rpx; line-height: 90rpx; }
.ready { margin-top: 8rpx; }
.ready.on { color: #26d27c; }
.ready.off { color: #ccc; }
.qr-wrap { margin-top: 12rpx; text-align:center; }
.qr { width: 360rpx; height: 360rpx; margin: 10rpx auto; background:#fff; }
.hint { color:#aaa; font-size: 22rpx; word-break: break-all; }
